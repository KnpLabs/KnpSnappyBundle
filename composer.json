{
    "name":        "purposefull/knp-snappy-bundle",
    "type":        "symfony-bundle",
    "description": "Easily create PDF and images in Symfony2 by converting Twig/HTML templates.",
    "keywords":    ["snappy", "pdf", "knplabs", "knp", "bundle"],
    "homepage":    "http://github.com/KnpLabs/KnpSnappyBundle",
    "license":     "MIT",

    "authors": [
        {
            "name": "KnpLabs Team",
            "homepage": "http://knplabs.com"
        },
        {
            "name": "Symfony Community",
            "homepage": "http://github.com/KnpLabs/KnpSnappyBundle/contributors"
        }
    ],

    "require": {
        "php":                      ">=5.3.2",
        "symfony/framework-bundle": "~2.3|~3.1",
        "symfony/finder":           "~2.3|~3.1",
        "symfony/validator":        "~2.3|~3.1",
        "knplabs/knp-snappy":       "~0.1"
    },

    "autoload": {
        "psr-4": {
            "Knp\\Bundle\\SnappyBundle\\": ""
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.5.x-dev"
        }
    }
}
